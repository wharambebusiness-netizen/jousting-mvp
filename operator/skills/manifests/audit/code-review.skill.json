{
  "id": "code-review",
  "name": "Code Review",
  "version": "1.0.0",
  "description": "AI-powered code review covering security, data loss, type safety, race conditions, error handling, naming conventions, architecture patterns, and BLOCK/WARN/INFO severity classification",
  "shortDescription": "Review code for issues",
  "category": "audit",
  "tags": ["review", "code-quality", "audit", "security", "style", "architecture"],
  "triggerExamples": [
    "review this code",
    "code review",
    "check for code issues",
    "review recent changes",
    "find potential bugs",
    "review pull request"
  ],
  "parameters": {
    "type": "object",
    "properties": {
      "directory": { "type": "string", "description": "Project directory" },
      "files": { "type": "array", "items": { "type": "string" }, "description": "Specific files to review" },
      "diffOnly": { "type": "boolean", "description": "Only review uncommitted changes" }
    },
    "required": ["directory"]
  },
  "requires": ["file-read"],
  "conflicts": [],
  "enhancedBy": ["git-status", "codebase-search", "lint"],
  "sideEffects": false,
  "idempotent": true,
  "requiresConfirmation": false,
  "model": "sonnet",
  "estimatedDurationMs": 60000
}
